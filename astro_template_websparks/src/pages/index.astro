---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Welcome to Websparks AI - Engineering Excellence">
	<main>
		<svg
			class="websparks-logo"
			width="495"
			height="495"
			viewBox="0 0 495 495"
			fill="none"
			xmlns="http://www.w3.org/2000/svg"
			aria-hidden="true"
		>
			<path
				fill-rule="evenodd"
				clip-rule="evenodd"
				d="M247.5 0C111.03 0 0 111.03 0 247.5C0 383.97 111.03 495 247.5 495C383.97 495 495 383.97 495 247.5C495 111.03 383.97 0 247.5 0ZM247.5 50C356.2 50 445 138.8 445 247.5C445 356.2 356.2 445 247.5 445C138.8 445 50 356.2 50 247.5C50 138.8 138.8 50 247.5 50Z"
				fill="url(#paint0_radial_websparks)"></path>
			<path
				d="M165 190L230 150L295 190L330 270L295 350L230 390L165 350L130 270L165 190Z"
				stroke="url(#paint1_linear_websparks)"
				stroke-width="8"
			></path>
			<circle cx="247.5" cy="247.5" r="40" fill="url(#paint2_radial_websparks)"></circle>
			<defs>
				<radialGradient
					id="paint0_radial_websparks"
					cx="0"
					cy="0"
					r="1"
					gradientUnits="userSpaceOnUse"
					gradientTransform="translate(247.5 247.5) rotate(90) scale(247.5)"
				>
					<stop stop-color="#4F46E5" stop-opacity="0.9"></stop>
					<stop offset="1" stop-color="#4338CA" stop-opacity="0.2"></stop>
				</radialGradient>
				<linearGradient
					id="paint1_linear_websparks"
					x1="165"
					y1="190"
					x2="330"
					y2="270"
					gradientUnits="userSpaceOnUse"
				>
					<stop stop-color="#10B981"></stop>
					<stop offset="1" stop-color="#3B82F6"></stop>
				</linearGradient>
				<radialGradient
					id="paint2_radial_websparks"
					cx="0"
					cy="0"
					r="1"
					gradientUnits="userSpaceOnUse"
					gradientTransform="translate(247.5 247.5) rotate(90) scale(40)"
				>
					<stop stop-color="#F59E0B"></stop>
					<stop offset="1" stop-color="#EF4444"></stop>
				</radialGradient>
			</defs>
		</svg>
		<h1>Welcome to <span class="text-gradient">Websparks AI</span></h1>
		<p class="instructions">
			Building the future of AI-powered software engineering.<br />
			<strong>Start building:</strong> Open the directory <code>src/pages</code> to begin your next innovation.
		</p>
		<ul role="list" class="link-card-grid">
			<Card
				href="/docs"
				title="AI Engineering"
				body="Leverage our cutting-edge ML models to automate and enhance your development workflow."
			/>
			<Card
				href="/solutions"
				title="Solutions"
				body="Explore our industry-specific AI implementations that solve real business problems."
			/>
			<Card
				href="/resources"
				title="Resources"
				body="Access guides, tutorials, and best practices for AI-driven software development."
			/>
			<Card
				href="/contact"
				title="Connect"
				body="Join our community of AI engineers and contribute to the next generation of software. ðŸš€"
			/>
		</ul>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1.5rem;
		width: 900px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	.websparks-logo {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
		text-shadow: 0 0 20px rgba(var(--accent-light), 20%);
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		border-radius: 12px;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>